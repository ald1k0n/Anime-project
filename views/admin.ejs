<%-include("partials/animes_header.ejs")-%>
<div class="container">
    <div class="mt-4">
        <h5 class="text-white text-center">Admin panel</h5>
    </div>
    <div class="table">
        <%for(let i = news.length-1;i>=0;i--){%>
            <form action="/delNews" method="post">
                <h3 class="text-white text-center"><%=news[i].title%> 
                    <div class="col-6 offset-3">
                        <img src="<%=news[i].image%>" style="width:100%">
                    </div>
                    <button class="btn btn-danger btn-sm" style="border:none" value="<%=news[i]._id%>" name="del" type="submit"><i class="fa-solid fa-trash"></i>Delete</button>
                </h3>
            </form>

        <%}%>
    </div>
</div>





