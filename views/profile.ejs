<%-include('partials/header.ejs')-%>
<div class="container mt-5">
    <%if(nick===false){%>
        <div class="error">
            <p class="text-center">Nickname or password is invalid</p>
        </div>
    <%}%>
            <form action="/profile" method="post">
                <h1 class=" mb-3 fw-normal text-white mt-5 text-center">Login</h1>
                <div class="form-floating text-center">
                    <div class="d-block">
                        <input type="text" placeholder="Nickname" name="username" required autofocus autocomplete="false">
                    </div>
                    <input type="password" autocomplete="false" placeholder="Password" name="password" required >
                    <button class="btn btn-primary btn-lg submit-btn" type="submit">Login</button>
                    <p class="mt-3 mb-3 text-white">Not a member <a href="/register">Register</a></p>
                    <p class="mt-3 mb-3 text-muted">&copy; AniTU</p>
                </div>
            </form>

</div>
<%-include('partials/footer.ejs')-%>