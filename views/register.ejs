<%-include('partials/header.ejs')-%>
<div class="container">
    <form action="/register" method="post">
        <h1 class=" mb-3 fw-normal text-white mt-5 text-center">Sign Up</h1>
        <div class="form-floating text-center">
            <div class="d-block">
                <input type="text" autocomplete="false" placeholder="Nickname" name="username" required autofocus>
            </div>
            <input type="password" autocomplete="false" placeholder="Password" name="password" required >
            <button class="btn btn-primary btn-lg submit-btn" type="submit">Sign Up</button>
            <p class="mt-3 mb-3 text-muted">&copy; AniTU</p>
        </div>
    </form>
</div>
